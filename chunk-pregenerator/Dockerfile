FROM curseforge-downloader:latest

ARG CHUNK_PREGENERATOR_VERSION
ENV CHUNK_PREGENERATOR_VERSION ${CHUNK_PREGENERATOR_VERSION:-1.16-3.0.5}
LABEL chunk_pregenerator_version=${CHUNK_PREGENERATOR_VERSION}

ARG CHUNK_PREGENERATOR_URL
ENV CHUNK_PREGENERATOR_URL ${CHUNK_PREGENERATOR_URL:-https://media.forgecdn.net/files/3237/965/Chunk+Pregenerator-V1.16-3.0.5.jar}

RUN set -eux; \
    curseforge-curl "${CHUNK_PREGENERATOR_URL}" > Chunk+Pregenerator-V${CHUNK_PREGENERATOR_VERSION}.jar
